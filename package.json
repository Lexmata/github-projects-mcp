{
  "name": "@lexmata/github-projects-mcp",
  "version": "1.0.0",
  "description": "MCP server for GitHub Projects V2 - manage projects, items, fields, and views",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "github-projects-mcp": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "swc src -d dist --strip-leading-paths && tsc --emitDeclarationOnly",
    "dev": "node --import @swc-node/register/esm-register src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "github",
    "github-projects",
    "ai",
    "llm",
    "claude"
  ],
  "author": "Lexmata LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lexmata/github-projects-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Lexmata/github-projects-mcp/issues"
  },
  "homepage": "https://github.com/Lexmata/github-projects-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/auth-app": "^7.1.1",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
